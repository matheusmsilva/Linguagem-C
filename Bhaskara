#include <stdio.h>
#include <stdlib.h>
#include <math.h>

//Calcula a fÃ³rmula de bhaskara
//Autor: Matheus Mota
	int main(){
		
	int a, b, c;
	float delta, x1, x2;
	
	printf("Digite o valor de A: ");
	scanf("%d", &a);
	
	printf("\nDigite o valor de B: ");
	scanf("%d", &b);
	
	printf("\nDigite o valor de C: ");
	scanf("%d", &c);
	
	delta = (pow(b,2)) - (4 * a * c);
	printf("\n O valor do delta e: %.2f", delta);
	
	if (delta > 0){
		x1 = -b + sqrt(delta) / 2 * a;
		x2 = -b - sqrt(delta) / 2 * a;
		printf("\n O valor de x1 e %f e o valor de x2 e %f", x1, x2);
	} else if (delta == 0) {
		x1 = -b + sqrt(delta) / 2 * a;
		x2 = x1;
		printf("\n O valor de delta e 0, portanto x1 e x2 sao iguais a: %f", x1);
	} else if (delta < 0 ){
		printf("\n O valor de delta e negativo, portanto, nao ha solucao.");
	}
	
	return 0;
}
