#include <stdio.h>
#include <stdlib.h>
#include <math.h>
#include <locale.h>

//Calcula a fórmula de bhaskara
//Autor: Matheus Mota
	int main(){
	int cond = 1;
	while (cond == 1) {
		setlocale(LC_ALL, "Portuguese");
		int a, b, c;
		float delta, x1, x2;
	
		printf("Digite o valor de A: ");
		scanf("%d", &a);
	
		printf("\nDigite o valor de B: ");
		scanf("%d", &b);
	
		printf("\nDigite o valor de C: ");
		scanf("%d", &c);
	
		delta = (pow(b,2)) - (4 * a * c);
		printf("\n O valor do delta é: %.2f", delta);
	
		if (delta > 0){
			x1 = -b + sqrt(delta) / 2 * a;
			x2 = -b - sqrt(delta) / 2 * a;
			printf("\n O valor de x1 é %f e o valor de x2 é %f.\n\n\n", x1, x2);
		} else if (delta == 0) {
			x1 = -b + sqrt(delta) / 2 * a;
			x2 = x1;
			printf("\n O valor de delta e 0, portanto x1 e x2 são iguais a: %f.\n\n\n", x1);
		} else if (delta < 0 ){
			printf("\n O valor de delta é negativo, portanto, nao há solução.\n\n\n");
		}
	
		printf("Você quer realizar outra operação?\n");
		printf("[1] Sim \n[2] Não\n");
		scanf("%d", &cond);
		
		if (cond = 1){
			system("cls");
		}
	}
	return 0;
}
